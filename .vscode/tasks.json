{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "conan: install Debug",
      "type": "shell",
      "command": "conan",
      "args": [
        "install",
        ".",
        "-s",
        "build_type=Debug",
        "--build=missing"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": []
    },
    {
      "label": "conan: install Release",
      "type": "shell",
      "command": "conan",
      "args": [
        "install",
        ".",
        "-s",
        "build_type=Release",
        "--build=missing"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": []
    },

    {
      "label": "cmake: configure Debug",
      "type": "shell",
      "command": "cmake",
      "args": [
        "-S",
        ".",
        "-B",
        "build/Debug",
        "-G",
        "Ninja",
        "-DCMAKE_TOOLCHAIN_FILE=build/Debug/generators/conan_toolchain.cmake",
        "-DCMAKE_BUILD_TYPE=Debug",
        "-DCMAKE_EXPORT_COMPILE_COMMANDS=ON"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": []
    },
    {
      "label": "cmake: configure Release",
      "type": "shell",
      "command": "cmake",
      "args": [
        "-S",
        ".",
        "-B",
        "build/Release",
        "-G",
        "Ninja",
        "-DCMAKE_TOOLCHAIN_FILE=build/Release/generators/conan_toolchain.cmake",
        "-DCMAKE_BUILD_TYPE=Release",
        "-DCMAKE_EXPORT_COMPILE_COMMANDS=ON"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": []
    },

    {
      "label": "cmake: build Debug",
      "type": "shell",
      "command": "cmake",
      "args": [
        "--build",
        "build/Debug"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": [],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "cmake: build Release",
      "type": "shell",
      "command": "cmake",
      "args": [
        "--build",
        "build/Release"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": []
    },

    {
      "label": "Build Debug (Conan + CMake)",
      "dependsOn": [
        "conan: install Debug",
        "cmake: configure Debug",
        "cmake: build Debug"
      ],
      "dependsOrder": "sequence"
    },
    {
      "label": "Build Release (Conan + CMake)",
      "dependsOn": [
        "conan: install Release",
        "cmake: configure Release",
        "cmake: build Release"
      ],
      "dependsOrder": "sequence"
    }
  ]
}